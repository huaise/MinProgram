<scroll-view scroll-y="true" style="height:100%;">
    <view  class="page">
        <view class="page__hd">
            <text>image</text>
            <text>图片</text>
        </view>
    </view>
    <view class="page_bd">
        <view wx:for="{{array}}" wx:for-item="item">
            <view class="selection__title">{{item.text}}</view>
            <view class="section__ctn">
                <image mode="{{item.mode}}" src="{{src}}"></image>
            </view>
        </view>
    </view>
</scroll-view>